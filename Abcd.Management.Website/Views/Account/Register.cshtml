    <script src="~/vendor/jquery/jquery.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/stylekayit.css" rel="stylesheet" />

    <style>
        body {
            background-image: url('../images/1.jpg');
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Register</h3>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input asp-for="Email" type="text" class="form-control" placeholder="Email">

                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Password" type="password" required class="form-control" placeholder="Password">
                            
                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="ConfirmPassword" type="password" required  class="form-control" placeholder="Confirm Password">
                            
                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="FirstName" type="text" required  class="form-control" placeholder="First Name">
                            
                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-users"></i></span>
                            </div>
                            <input asp-for="LastName" type="text" required  class="form-control" placeholder="Last Name">
                            
                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-city"></i></span>
                            </div>
                            <input asp-for="City" type="text" required  class="form-control" placeholder="City">
                            
                        </div>

                        <div style="padding-top:10px" class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            </div>
                            <input asp-for="PhoneNumber" type="tel" required  class="form-control" placeholder="Phone Number">
                           
                        </div>

                        <div style="padding-top:10px" class="form-group row">
                            <button type="submit" class="btn btn-block btn-primary">Register</button>
                        </div>

                        <p class="loginhere">
                            Already have an account? 
                            <a asp-action="Login" class="loginhere-link">Login</a>
                        </p>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>





